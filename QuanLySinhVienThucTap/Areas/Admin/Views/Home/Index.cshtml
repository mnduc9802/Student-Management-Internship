                    },
                    tooltip: {
                        callbacks: {
                            label: function (context) {
                                var label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += Math.round(context.parsed * 100) / 100 + '%';
                                return label;
                            }
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index',
                },
                scales: {
                    y: {
                        grid: {
                            drawBorder: false,
                            display: false,
                            drawOnChartArea: false,
                            drawTicks: false,
                        },
                        ticks: {
                            display: false
                        }
                    },
                    x: {
                        grid: {
                            drawBorder: false,
                            display: false,
                            drawOnChartArea: false,
                            drawTicks: false,
                        },
                        ticks: {
                            display: false,
                        }
                    },
                },
            },
        });
    </script>
    <script>
        var ctx4 = document.getElementById("pie-chart-3").getContext("2d");
        let statusCounts = @Html.Raw(Json.Encode(statusCounts));
        let totalstatusCounts = statusCounts.reduce((a, b) => a + b, 0);
        let statusCountsPercentage = statusCounts.map(count => ((count / totalstatusCounts) * 100));

        new Chart(ctx4, {
            type: "pie",
            data: {
                labels: ['Sinh viên làm tại doanh nghiệp', 'Sinh viên làm ngoài'],
                datasets: [{
                    label: "Projects",

@model QuanLySinhVienThucTap.Models.Employee

@{
    ViewBag.Title = "Details";
    string magv;
    if (Model.EmployeeID < 10)
    {
        magv = "0102630" + Model.EmployeeID;
    }
    else
    {
        magv = "010263" + Model.EmployeeID;
    }
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card card-frame mb-4">
                <div class="card-header">
                    <h5 class="card-title text-center">Thông tin cán bộ và công ty</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm">
                            <div class="form-group">
                                <label class="form-control-label">Mã cán bộ hướng dẫn:</label>
                                @magv
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Tên cán bộ hướng dẫn:</label>
                                @Html.DisplayFor(model => model.Name)
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Email:</label>
                                @Html.DisplayFor(model => model.Email)
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Số điện thoại:</label>
                                @Html.DisplayFor(model => model.PhoneNumber)
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Địa chỉ:</label>
                                @Html.DisplayFor(model => model.Address)
                            </div>
                        </div>
                        <div class="col-sm">
                            <div class="form-group">
                                <label class="form-control-label">Tên công ty:</label>
                                @Html.DisplayFor(model => model.CompanyName)
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Địa chỉ công ty:</label>
                                @Html.DisplayFor(model => model.CompanyAddress)
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Ghi chú:</label>
                                @Html.DisplayFor(model => model.Note)
                            </div>
                            <a href="@Url.Action("Edit", "Employees", new { id = Model.EmployeeID })" class="btn btn-icon btn-3 btn-dark">
                                <span class="btn-inner--icon"><i class="fas fa-pencil-alt"></i>&nbsp;&nbsp;Sửa</span>
                            </a>
                            <a href="@Url.Action("Index", "Employees")" class="btn btn-icon btn-3 btn-danger">
                                <span class="btn-inner--icon"><i class="fas fa-times"></i>&nbsp;&nbsp;Trở về</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
